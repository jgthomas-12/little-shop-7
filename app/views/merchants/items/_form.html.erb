<%= form_with model: @item, url: path, method: method, local: true do |f| %>
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %>

  <%= f.label :description, "Description:" %>
  <%= f.text_field :description %>

  <%= f.label :unit_price, "Unit Price:" %>
  <%= f.number_field :unit_price, in: 1..10000000 %>

  <%= f.label :status, "Status:" %>
  <%= f.text_field :status %>

  <%= f.submit button_text %>
  <% end %>